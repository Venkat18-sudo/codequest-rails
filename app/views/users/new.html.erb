<h1>Sign Up</h1>
<div class ="row">
	<div class="col-md-3">

		<%= form_with(model: @user,local: true) do |f|%>
			<%= render 'shared/error_messages' %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%=f.label :password %>
			<%= f.password_field :password %>

			<%=f.label :password_conformation %>
			<%= f.password_field :password_confirmtion %>


			<%=f.submit "Create my account ",class:"btn btn-primary"%>
		<% end %>
     </div>

</div>