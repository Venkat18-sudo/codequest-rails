<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
		<h1>
			<%= load_image_from_robohash @user %>
			<%= @user.name %>
		</h1>
        </section>

	</aside>
</div>
<% if @user.microposts.any? %>
<div class="row">
	<ul class="list-group">
		<% @microposts.each do |micropost| %>
		 <li class="list-group-item">
		  <ul class="list-group-horizontal">
		 	<li class="list-group-item"> <%= micropost.content %> </li>
		 	<li class="list-group-item"> Posted  <%= time_ago_in_words(micropost.created_at) %> ago.</li>
		 <% if current_user.id == micropost.user.id %>
		 	<%= link_to "delete", 
			micropost_path(micropost.id) , method: :delete,
		 	data: { confirm: "You sure?"} %>
		 <% end %>
		  </ul>
		 </li>
		<% end %>
	</ul>
</div>
<% end %>